{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "lib/ngrok": [
        "libs/ngrok/src"
      ],
      "lib/ngrok/*": [
        "libs/ngrok/src/*"
      ],
      "lib/constants": [
        "libs/constants/src"
      ],
      "lib/constants/*": [
        "libs/constants/src/*"
      ],
      "lib/speed-reader": [
        "libs/speed-reader/src"
      ],
      "lib/speed-reader/*": [
        "libs/speed-reader/src/*"
      ],
      "lib/fs": [
        "libs/fs/src"
      ],
      "lib/fs/*": [
        "libs/fs/src/*"
      ],
      "lib/fs-db": [
        "libs/fs-db/src"
      ],
      "lib/fs-db/*": [
        "libs/fs-db/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}